{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../../dist/out-tsc",
        "target": "es2020",
        "declaration": true,
        "inlineSources": true,
        "types": [],
        "lib": ["dom", "es2018"],
        "allowSyntheticDefaultImports": true
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true,
        "enableIvy": true,
        "compilationMode": "partial"
    },
    "exclude": [
        "src/test-setup.ts",
        "**/*.spec.ts",
        "**/*.test.ts",
        "jest.config.ts"
    ],
    "include": ["**/*.ts"]
}
